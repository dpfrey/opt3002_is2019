# top-most EditorConfig file
root = true

# Linux Kernel style
[*.{c,h}]
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = tab
indent_size = 8

# Legato definition files
[{*.{adef,mdef,sdef},Component.cdef}]
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
